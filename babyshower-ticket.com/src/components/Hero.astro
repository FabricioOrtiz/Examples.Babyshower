---
// Hero component for the concert landing page
---

<section class="items-center justify-center text-white">
    
    <div class="  z-0">
        <img 
          src="/invitation.svg?height=1080&width=1920" 
          alt="Baby shower Amalia y Amanda" 
          class="w-full h-full object-cover "
        />
      </div>
      
      <div class="relative z-10 text-center px-4 max-w-4xl mx-auto" style="display: none;">
       
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#tickets" 
            class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-full text-lg transition-colors"
          >
            Reservar
          </a>
          <button 
        id="hero-get-tickets" class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-3 px-8 rounded-full text-lg transition-colors">
            Get Tickets
        </button>
          
        </div>
       
      </div>
      <script>
        document.addEventListener('DOMContentLoaded', () => {
          const getTicketsBtn = document.getElementById('hero-get-tickets');
          
          if (getTicketsBtn) {
            getTicketsBtn.addEventListener('click', () => {
              // Get the popup element
              const popup = document.getElementById('ticket-popup');
              
              if (popup) {
                // Reset the form
                const ticketForm = document.getElementById('ticket-form');
                if (ticketForm) ticketForm.reset();
                
                // Set a default ticket ID (1 for Single Day Pass)
                const ticketIdInput = document.getElementById('ticket-id');
                if (ticketIdInput) ticketIdInput.value = "1";
                
                // Show the popup
                popup.classList.remove('hidden');
              } else {
                // Fallback to scrolling if popup isn't available
                document.querySelector('#tickets')?.scrollIntoView({ behavior: 'smooth' });
              }
            });
          }
        });
      </script>
</section>



  